## InfluxDB Output Plugin
##
#[[outputs.influxdb]]
#  urls = ["http://localhost:8086"] # required
#  database = "telegraf" # required
#  retention_policy = ""
#  write_consistency = "any"
#  timeout = "5s"
#  username = "username"
